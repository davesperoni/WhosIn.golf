@inherits AddGroupCode
@page "/AddGroup"


<h3>AddGroup</h3>

<DisplayMsg ErrorMessage=@BaseErrorMessage InfoMessage=@BaseInfoMessage SecretErrorDetails=@BaseSecretErrorDetails></DisplayMsg>

<EditForm Model=@groupItem OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label>GroupName</label>
        <InputText @bind-Value=groupItem.GroupName class="form-control" />
    </div>

    <div class="form-group">
        <label>GroupDescription</label>
        <InputText @bind-Value="groupItem.GroupDescription" class="form-control" />
    </div>

    <div class="form-group">
        <label>GroupPin</label>
        <InputText @bind-Value="groupItem.GroupPin" class="form-control" />
    </div>

    <div class="form-group">
        <label>GroupPhone</label>
        <InputText @bind-Value="groupItem.GroupPhone" class="form-control" />
    </div>

    <div class="form-group">
        <label>GroupEmail</label>
        <InputText @bind-Value="groupItem.GroupEmail" class="form-control" />
    </div>

    <div class="form-group">
        <label>GroupActive</label>
        <InputCheckbox @bind-Value="groupItem.GroupActive" class="form-control" />
    </div>

    <div class="form-group">
        <label>GroupIsDefault</label>
        <InputCheckbox @bind-Value="groupItem.GroupIsDefault" class="form-control" />
    </div>

    <input type="submit" class="btn btn-primary" value="Save" />
    <button class="btn btn-primary" @onclick="CancelForm">  Cancel  </button>

</EditForm>




















